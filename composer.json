{
  "name": "blacknova/traders",
  "description": "BlackNova Traders is a web-based, multi-player space exploration game inspired by the popular BBS game of TradeWars.",
  "authors": [
    {
      "name": "Ron Harwood",
      "email": "harwoodr@gmail.com"
    },
    {
      "name": "Blacknova Development",
      "email": "blacknova@net-code.co.uk"
    },
    {
      "name": "TheMightyDude",
      "email": "TheMightyDude@gmail.com"
    },
    {
      "name": "TheKabal",
      "email": "TheKabal@gmail.com"
    },
    {
      "name": "Simon Dann",
      "email": "simon.dann@gmail.com"
    }
  ],
  "license": "AGPL-3.0",
  "require": {
    "php": "^8.4",
    "adodb/adodb-php": "^5.22",
    "ezyang/htmlpurifier": "^4.17",
    "smarty/smarty": "^5.4",
    "symfony/mailer": "^7.1",
    "ext-mbstring": "*",
    "photogabble/tuppence": "^2.0",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "symfony/var-dumper": "^8.0@beta"
  },
  "autoload": {
    "psr-4": {
      "Bnt\\": "classes/",
      "Bad\\": "classes/",
      "BlackNova\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BlackNova\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
